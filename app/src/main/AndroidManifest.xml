<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logotienda"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logotienda"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoGrupo3_Tienda"
        tools:targetApi="31">

        <activity
            android:name=".vistas.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".vistas.OrderFormActivity"
            android:exported="true" />

        <activity
            android:name=".vistas.OrderDetailsActivity"
            android:exported="true" />

    </application>

</manifest>


